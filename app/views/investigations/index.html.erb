        <td><%= investigation.client_id %></td>
        <td><%= investigation.status %></td>
        <td><%= investigation.licenseType %></td>
        <td><%= investigation.position %></td>
        <td><%= investigation.renewal %></td>
        <td><%= investigation.applicant_name %></td>
        <td><%= investigation.applicant_dob %></td>
        <td><%= investigation.applicant_social %></td>
        <td><%= investigation.caseNumber %></td>
        <td><%= investigation.gaming_license_number %></td>
        <td><%= investigation.location %></td>
        <td><%= investigation.assigned_date %></td>
        <td><%= investigation.closed_date %></td>
        <td><%= investigation.user_badge_number %></td>
        <td><%= link_to 'Show', investigation %></td>
        <td><%= link_to 'Edit', edit_investigation_path(investigation) %></td>
        <td><%= link_to 'Destroy', investigation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
