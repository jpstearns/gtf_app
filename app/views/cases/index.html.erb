<h1>Listing Cases</h1>

<table>
  <thead>
    <tr>
      <th>Typeofcase</th>
      <th>User</th>
      <th>Pplicant</th>
      <th>Client</th>
      <th>Status</th>
      <th>Licensetype</th>
      <th>Position</th>
      <th>Renewal</th>
      <th>Applicant name</th>
      <th>Applicant dob</th>
      <th>Applicant social</th>
      <th>Casenumber</th>
      <th>Gaming licens number</th>
      <th>Location</th>
      <th>Assigned date</th>
      <th>Closed date</th>
      <th>User badge number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cases.each do |case| %>
      <tr>
        <td><%= case.typeOfCase %></td>
        <td><%= case.user_id %></td>
        <td><%= case.pplicant_id %></td>
        <td><%= case.client_id %></td>
        <td><%= case.status %></td>
        <td><%= case.licenseType %></td>
        <td><%= case.position %></td>
        <td><%= case.renewal %></td>
        <td><%= case.applicant_name %></td>
        <td><%= case.applicant_dob %></td>
        <td><%= case.applicant_social %></td>
        <td><%= case.caseNumber %></td>
        <td><%= case.gaming_licens_number %></td>
        <td><%= case.location %></td>
        <td><%= case.assigned_date %></td>
        <td><%= case.closed_date %></td>
        <td><%= case.user_badge_number %></td>
        <td><%= link_to 'Show', case %></td>
        <td><%= link_to 'Edit', edit_case_path(case) %></td>
        <td><%= link_to 'Destroy', case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

