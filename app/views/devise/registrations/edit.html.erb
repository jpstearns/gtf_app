<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
      <!-- Main -->
      <section class="wrapper style1">
        <div class="container">
          <div class="row 200%">
            <div class="4u 12u(narrower)">
              <div id="sidebar">

                <!-- Sidebar -->

                  <section>
                    <h3>Rhode Island Gaming App</h3>
                    <p>This page will guide you through the process of updating your information, changing your password, and deleting user accounts. Warning: Deleting user accounts is permanent and all of your personal data will be destroyed for security measures.</p>
                    <footer>
                       <span class="image featured"><img src="/assets/banner.jpg" alt="" /></span>
                    </footer>
                  </section>

                  <section>
                    <h3>Change Password</h3>
                        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
                        <%= f.input :password_confirmation, required: false %>
                        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
                      <br></br>
                    <p>Unhappy? <%= link_to "Click Here", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
                  </section>

              </div>
            </div>
            <div class="8u  12u(narrower) important(narrower)">
              <div id="content">

                <!-- Content -->

                  <article>
                    <header>
                      <h2>Edit User Profile</h2>
                      <p>Welcome Officer lets get your account setup.</p>
                    </header>
                      <div class="form-inputs">
                        <%= f.input :first_name, required: true, autofocus: true%>
                        <%= f.input :last_name, required: true, autofocus: true%>
                        <%= f.input :email, required: true, autofocus: true %>
                        <%= f.input :badge_number, required: true, autofocus: true %>
                        <%= f.input :phone_number, required: true, autofocus: true %>
                        <%= f.input :desk_extenstion, required: true, autofocus: true %>
                        <%= f.input :rank, required: true, autofocus: true %><br>
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                        <% end %>

                      </div>
                     <div class="form-actions">
                        <%= f.button :submit, "Update" %>
                      </div>
                  </article>

              </div>
            </div>
          </div>
        </div>
      </section>
  <% end %>



